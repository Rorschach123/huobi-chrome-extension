{
  "name": "火币价格查询器",
  "version": "1.0",
  "manifest_version": 2,

  // 简单描述
  "description": "查询火币交易场每日价格 powerby Erictang",
  "icons": {
    /*"16": "image/icon16.png",
    "48": "image/icon48.png"*/
  },
  // 选择默认语言
  /*"default_locale": "en",*/

  // 浏览器小图表部分
  "browser_action": {
    "default_title": "price status",
    "default_icon": "image/icon.png",
    "default_popup": "html/index.html"
  },

  // 引入一个脚本
  "content_scripts": [
    {
      "js": ["script/index.js"],
      // 在什么情况下使用该脚本
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      // 什么情况下运行【文档加载开始】
      "run_at": "document_start",
      "persistent":false
    }

  ],
  // 应用协议页面
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "activeTab"
  ]

}
