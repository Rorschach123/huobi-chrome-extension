{
  "name": "火币价格查询器",
  "version": "2.0",
  "manifest_version": 2,

  "description": "完全重构的2.0版本",
  "icons": {
    "16":"image/icon48.png",
    "48": "image/icon48.png"
  },
  /* "default_locale": "en", */

  "browser_action": {
    "default_title": "今天又跌了么📉",
    "default_icon": "image/icon48.png",
    "default_popup": "html/index.html"
  },
  "background": {
    "scripts": ["script/jquery.min.js","script/particles.js"]
  },
  "content_scripts": [
    {
      "js": ["script/index.js","script/app.js"],
      "matches": [
        "ftp://*/*"
      ],
      "run_at": "document_start",
      "persistent":false
    }

  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "activeTab",
    "storage"
  ]
}
